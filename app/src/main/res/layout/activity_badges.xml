<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BadgesActivity"
    android:background="@drawable/woden_bg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:gravity="center">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/badge1"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/badge1txt"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="Unlock"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/button_bg"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/badge2"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/badge2txt"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="@color/white"
                    android:text="Unlock"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/badge3"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/badge3txt"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="@color/white"
                    android:text="Unlock"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/badge4"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/badge4txt"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="@color/white"
                    android:text="Unlock"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/badge5"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/badge5txt"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="@color/white"
                    android:text="Unlock"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/button_bg"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>